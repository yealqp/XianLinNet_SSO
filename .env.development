# ============================================
# OAuth Server - Development Environment
# ============================================
# This file contains development-specific configuration.
# Copy this to .env for local development.

# ============================================
# Application Configuration
# ============================================
APP_NAME=OAuth Server (Dev)
APP_ENV=development
LOG_LEVEL=debug

# Origin URL for the OAuth server
ORIGIN=http://localhost:8080

# Frontend origin URL (for CORS)
ORIGIN_FRONTEND=http://localhost:5173

# ============================================
# Server Configuration
# ============================================
PORT=8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
BODY_LIMIT=4194304

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=oauth_server
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSLMODE=disable

# Database connection pool settings
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h
DB_CONN_MAX_IDLE_TIME=10m
DB_QUERY_TIMEOUT=5s

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars-long
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800

# ============================================
# Captcha Configuration (Cap.js)
# ============================================
CAPTCHA_ENABLED=false
CAPTCHA_INSTANCE_URL=
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET=

# ============================================
# SMTP Email Configuration
# ============================================
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USE_SSL=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_FROM_NAME=OAuth Server

# ============================================
# Default Admin Configuration
# ============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456
ADMIN_USERNAME=admin

# ============================================
# Real Name Verification Configuration
# ============================================
VERIFY_API_ENABLED=false
IDCARD_API_URL=
IDCARD_APP_CODE=
